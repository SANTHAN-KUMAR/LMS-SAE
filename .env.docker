# ================================================
# Environment Configuration Template for Docker
# ================================================
# Copy this file to .env and fill in your values
# DO NOT commit the .env file to version control!
#
# Usage: cp .env.docker .env

# ============================================
# Application Settings
# ============================================
APP_NAME=Examination Middleware
APP_VERSION=1.0.0
DEBUG=false
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_KEY_AT_LEAST_32_CHARS

# ============================================
# Database Settings
# ============================================
# PostgreSQL credentials (used by both app and db container)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=exam_middleware

# Database port exposed on host (default: 5433 to avoid conflict)
DB_PORT=5433

# ============================================
# Redis Settings (optional)
# ============================================
REDIS_PORT=6379

# ============================================
# Moodle Integration
# ============================================
# Your Moodle instance URL
MOODLE_BASE_URL=https://your-moodle-instance.com

# Admin token for Moodle API (generate from Moodle admin panel)
MOODLE_ADMIN_TOKEN=your_moodle_admin_token

# ============================================
# File Upload Settings
# ============================================
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=.pdf,.jpg,.jpeg,.png

# ============================================
# Server Ports
# ============================================
APP_PORT=8000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# CORS Settings
# ============================================
# JSON array of allowed origins
CORS_ORIGINS=["http://localhost:8000","http://localhost:80","https://your-domain.com"]

# ============================================
# Development Tools (only used with --profile dev)
# ============================================
PGADMIN_EMAIL=admin@exam.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
